<% content_for :title do %>
  <% if request.original_url == "http://localhost:3000/new" %>
    newest submissions
  <% elsif request.original_url == "http://localhost:3000/" %>
    reddit: the front page of the internet
  <% elsif request.original_url == "http://localhost:3000/top" %>
    top scoring links: all
  <% end %>
<% end %>

<% content_for :header_info do %>
  <p role="button" class="h4 mb-2 mt-2 d-flex align-items-center"><%= link_to "Reddit", root_path, class: "text-decoration-none" %></p>
<% end %>

<div class="row">
  <div class="col-sm-9">
    <%= render partial: "posts/lists" %>
  </div>
</div>

