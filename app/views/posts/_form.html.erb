<div class="row">
  <div class="col-sm-8">
    <%= form_for [@community, @post] do |form| %>
      <div class="form-label">
        <%= label_tag :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="field">
        <%= form.label :content %>
        <%= form.rich_text_area :content, class: "form-control customized-min-height" %>
      </div>
      <%= form.submit "Submit", class: "btn btn-primary mt-1 mb-3" %>
    <% end %>
  </div>
</div>
