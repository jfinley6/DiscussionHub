$("#vote-actions-<%= @post.id %> .score").text("<%= @post.score %>")

$("#vote-actions-<%= @post.id %> .downvote, #vote-actions-<%= @post.id %> .upvote").removeClass("active");

<% if @new_vote %>
    <% if @is_upvote === "true" %>
        $("#vote-actions-<%= @post.id %>").find(".upvote").addClass("active");
    <% else %>
        $("#vote-actions-<%= @post.id %>").find(".downvote").addClass("active");
    <% end %>
<% end %>

<% if account_signed_in? %>
    $("#karma, #karma-header").text("<%= @karma %>")
    $("#karma, #karma-header").css('color', '<%= changeKarmaColor @karma %>')
<% end %>

