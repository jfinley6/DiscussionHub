<div id="page-header" class="container">
  <div class="row">
    <div class="col-sm-6 col-7 d-flex">
      <%= yield :header_info %>
    </div>
    
    <div class="col-sm-6 col-5 float-end d-flex justify-content-end px-1 align-items-center">
      <% if account_signed_in? %>
        <div class="dropdown">
          <a href="#" class="btn btn-white dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            <%= current_account.username %> (<span id="karma-header" style="color: <%= changeKarmaColor current_account.karma %>"><%= current_account.karma %></span>)
          </a>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <%= link_to "Profile" , profile_path(current_account.username), class: "dropdown-item" %>
            <%= link_to "Settings" , edit_account_registration_path , class: "dropdown-item" %>
            <%= link_to "Sign Out" , destroy_account_session_path, method: :get, class: "dropdown-item" %>
          </ul>
        </div>
      <% else %>
        <div>
          <%= link_to "Log In" , new_account_session_path, class: "btn btn-sm btn-outline-primary" %>
          <%= link_to "Sign Up" , new_account_registration_path, class: "btn btn-sm btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
