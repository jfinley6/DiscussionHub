<% content_for :header_info do %>
  <p role="button" class="h4 mb-2 mt-2 d-flex align-items-center"><%= link_to "Reddit", root_path, class: "text-decoration-none" %></p>
<% end %>

<div class="d-flex align-items-center flex-column">
  <h2>Sign up</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="form-label">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email form-control" %>
    </div>

    <div class="form-label">
      <%= f.label :username %><br />
      <%= f.text_field :username %>
    </div>
  
    <div class="form-label">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password form-control" %>
    </div>
  
    <div class="form-label">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password form-control" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Sign up", data: { turbo: false }  %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
